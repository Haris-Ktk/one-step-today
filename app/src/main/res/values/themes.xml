<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.OneStepToday" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- NAVIGATION BAR -->
        <item name="android:navigationBarColor">@android:color/black</item>

    </style>

    <!-- App theme -->
    <style name="Theme.OneStepToday" parent="Base.Theme.OneStepToday" />

    <style name="GlassCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/bg_glass_card</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="GlassRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="GlassLeftText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="GlassRightText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#555</item>
    </style>

    <style name="GlassSubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
    </style>

    <style name="FeatureText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>






</resources>
