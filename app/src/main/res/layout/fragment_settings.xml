<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:paddingBottom="96dp">

            <!-- TITLE -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textSize="30sp"
                android:fontFamily="@font/spb"
                android:textColor="#000"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- PROFILE -->
            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="17sp"
                android:textColor="#666"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- NAME -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardName"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/tvProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Name"
                        style="@style/GlassLeftText" />
                    <TextView
                        android:id="@+id/cardNameText"
                        android:text="User"
                        style="@style/GlassRightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EDIT NAME -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEditName"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/cardName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Edit name"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PREFERENCES -->
            <TextView
                android:id="@+id/tvPref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferences"
                android:textSize="17sp"
                android:textColor="#666"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/cardEditName"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- DAILY REMINDER -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReminder"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/tvPref"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Daily reminder"
                        style="@style/GlassLeftText" />
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PROGRESS -->
            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress &amp; Data"
                android:textSize="17sp"
                android:textColor="#666"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/cardReminder"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- RESET -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReset"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/tvProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Reset progress"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PREMIUM -->
            <TextView
                android:id="@+id/tvPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textSize="17sp"
                android:textColor="#666"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/cardReset"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- UPGRADE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpgrade"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/tvPremium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/cardUpgradeText"
                        android:text="Upgrade to Premium"
                        android:textColor="#6200EE"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RESTORE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRestore"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/cardUpgrade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Restore purchase"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- REFUND -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRefund"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/cardRestore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Request a Refund"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LEGAL -->
            <TextView
                android:id="@+id/tvLegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal &amp; Info"
                android:textSize="17sp"
                android:textColor="#666"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/cardRefund"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrivacy"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/tvLegal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Privacy Policy"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTerms"
                style="@style/GlassCard"
                app:layout_constraintTop_toBottomOf="@id/cardPrivacy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Terms of Use"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSupport"
                style="@style/GlassCard"
                android:layout_marginBottom="36dp"
                app:layout_constraintTop_toBottomOf="@id/cardTerms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    style="@style/GlassRow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:text="Contact Support"
                        style="@style/GlassLeftText" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom spacer for bottom navigation -->
            <View
                android:id="@+id/bottomSpacer"
                android:layout_width="0dp"
                android:layout_height="96dp"
                app:layout_constraintTop_toBottomOf="@id/cardSupport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
