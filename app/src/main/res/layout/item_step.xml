<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFDDBB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step Title:"
            android:fontFamily="@font/spb"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Book flight research"
            android:textSize="18sp"
            android:fontFamily="@font/spb"
            app:layout_constraintTop_toBottomOf="@id/labelStep"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actions"/>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I will do flight research at home."
            android:textSize="14sp"
            android:fontFamily="@font/spb"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actions"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_nav_selected"
                android:padding="8dp"
                android:src="@drawable/ic_edit"/>

            <ImageView
                android:id="@+id/btnDone"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_nav_selected"
                android:padding="8dp"
                android:src="@drawable/ic_check"/>

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_nav_selected"
                android:padding="8dp"
                android:src="@drawable/ic_delete"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
